{
    "name": "arachne/security",
    "description": "Authentication and authorization for Nette framework. Deals with cases that are difficult to implement with nette/security.",
    "type": "library",
    "keywords": [ "nette", "arachne", "security" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jáchym Toušek",
            "homepage": "http://enumag.cz",
            "email": "enumag@gmail.com"
        }
    ],
    "require": {
        "php": "^5.6.0|^7.0.0",
        "arachne/service-collections": "^0.1.0",
        "nette/di": "^2.4.0",
        "nette/http": "^2.4.0",
        "nette/security": "^2.4.0",
        "nette/utils": "^2.4.0"
    },
    "require-dev": {
        "arachne/codeception": "^0.7.0",
        "codeception/codeception": "^2.2.0",
        "eloquent/phony": "^0.14.0"
    },
    "autoload": {
        "psr-4": {
            "Arachne\\Security\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit/src",
            "Tests\\Integration\\": "tests/integration/src"
        }
    },
    "scripts": {
        "all": [
            "@fix",
            "@analyse",
            "@test"
        ],
        "tools": "sh composer-tools.sh",
        "fix": "\"vendor-tools/bin/php-cs-fixer\" fix",
        "analyse": "\"vendor-tools/bin/phpstan\" analyse --no-progress --level=4 --configuration=phpstan.neon src tests",
        "test": [
            "\"vendor/bin/codecept\" build",
            "\"vendor/bin/codecept\" run --debug"
        ]
    }
}
